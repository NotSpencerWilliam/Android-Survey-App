<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to the Survey App!"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/btnStartSurvey"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Take Survey"
        android:onClick="startSurvey"/>

    <Button
        android:id="@+id/btnViewSummary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="View Summary"
        android:onClick="viewSummary"/>

    <Button
        android:id="@+id/btnEmailReport"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email Report"
        android:onClick="emailReport"/>
</LinearLayout>
